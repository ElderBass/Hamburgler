<style>

* {
    font-family: 'Yusei Magic', sans-serif;
}

body {
    background-color:  rgb(245, 132, 98);
    text-align: center;
    color: rgb(182, 8, 8)
}

header {
    background-color: rgb(77, 36, 2);
    color: rgb(235, 252, 0);
    padding: 25px;
}

#burgerArt {
    width: 300px;
    height: 150px;
    margin-bottom: 10px;
}

.mainContainer {
    display: inline-block;
    align-items: center;
    margin-top: 30px;
}

.float-left {
    float: left;
}

.float-right {
    float: right;
}

#burger {
    margin-top: 8px;
    margin-bottom: 8px;
}
#devoured {
    margin-top: 20px;
}

.devourBtn {
    height: 60%;
    margin-left: 20px;
}
.hide {
    display:none;
}

</style>

<script type='text/javascript'>


$(function(){
  
    $('.devourBtn').on('click', function (event) {
        event.preventDefault();
          
        var id = $(this).data("id");

        var filler = $('#fillerMessage');

        filler.addClass('hide'); 
        var devouredList = $('#devoured');  

        console.log(id)
        console.log("This.value: " + $(this).val());

        var devourMessage = $('<li>');
        devourMessage.text($(this).val());

        devouredList.prepend(devourMessage);

        var devoured = {
            devoured: 1
        }

        $.ajax("/api/burgers/" + id, {
        type: "PUT",
        data: devoured
        }).then(
        function() {
            console.log(`devoured the burger`);
            // Reload the page to get the updated list
            location.assign("/");
        }
        );
    })
})

</script>